{% extends 'layout.njk' %}

{% block head %}
    <title> Área dos Alunos </title>
{% endblock %}

{% block content %}
    <div class="card table-container">
            
        <div class="header">

            <a href="/students/create">NOVO</a>

            <form action="/students" method='GET'>

                <input 
                    type="text"
                    name='filter'
                    placeholder='Nome ou Formação'
                    value='{{ filter }}'
                >

                <button type="submit">Filtrar</button>

            </form>

        </div>

        <table width='100%'>

            <thead>
                <tr>
                    <th>Alunos</th>
                    <th id="formacion">Formação</th>
                    <th>E-mail</th>
                    <th>Ação</th>
                </tr>
            </thead>

            <tbody>
                {% for student in student %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ student.avatar_url }})"></span>
                            {{ student.name }}
                        </td>
                    
                        <td>
                            <span>{{ student.formaction }}</span>
                        </td>

                        <td>
                            <span>{{ student.email }}</span>
                        </td>

                       

                        <td> <a href="/students/{{ student.id }}">Ver</a> </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>

    </div>
{% endblock %}